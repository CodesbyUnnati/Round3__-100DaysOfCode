#include <iostream>
using namespace std;
int main()
{
    int T, N, S;
    cin >> T;
    while (T--)
    {
        cin >> N >> S;
        int temp1 = 200;
        int temp2 = 200;
        int cost_arr[N];
        for (int i = 0; i < N; i++)
        {
            cin >> cost_arr[i];
        }
        int binary_arr[N];
        for (int i = 0; i < N; i++)
        {
            cin >> binary_arr[i];
        }
        for (int i = 0; i < N; i++)
        {
            if (binary_arr[i] == 0 && temp1 > cost_arr[i])
            {
                temp1 = cost_arr[i];
            }
            else if (binary_arr[i] == 1 && temp2 > cost_arr[i])
            {
                temp2 = cost_arr[i];
            }
        }
        if (temp1 + temp2 + S <= 100)
        {
            cout << "yes\n";
        }
        else
        {

            cout << "no\n";
        }
    }

    return 0;
}
