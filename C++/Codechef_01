
#include <iostream>
using namespace std;
int main()
{
    int test_cases;
    int players;
    int money;

    cin >> test_cases;
    while (test_cases--)
    {
        int i;
        int temp1 = 200;
        int temp2 = 200;

        cin >> players >> money;
        int arr_cost[players];
        int arr[players];

        for (i = 0; i < players; i++)
        {
            cin >> arr_cost[i];
        }

        for (i = 0; i < players; i++)
        {
            cin >> arr[i];
        }
        for (i = 0; i < players; i++)
        {

            if ((arr[i] == 0) && (temp1 > arr_cost[i]))
            {
                temp1 = arr_cost[i];
            }

            else if ((arr[i] == 1) && (temp2 > arr_cost[i]))
            {
                temp2 = arr_cost[i];
            }
        }
        if ((temp1 + temp2 + money) <= 100)
        {

            cout << "yes\n";
        }
        else
        {
            cout << "no\n";
        }
    }
    return 0;
}
